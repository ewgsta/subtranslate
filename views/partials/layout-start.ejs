<!DOCTYPE html>
<html lang="tr" data-theme="<%= theme || 'system' %>">
<%- include('head', { title, description }) %>
  <%
    const chromeHidden =
      typeof hideChrome === 'boolean'
        ? hideChrome
        : false;
  %>
  <body class="theme-<%= theme || 'system' %> <%= chromeHidden ? 'chrome-hidden' : '' %>">
    <div class="ambient-surface" aria-hidden="true">
      <div class="gradient gradient-1"></div>
      <div class="gradient gradient-2"></div>
      <div class="gradient gradient-3"></div>
      <div class="grid-pattern"></div>
    </div>
    <div class="app-shell">
      <% if (!chromeHidden) { %>
      <%- include('navbar', {
        activePath: activePath || '/',
        theme: theme || 'system',
        turnstileVerified: typeof turnstileVerified !== 'undefined'
          ? turnstileVerified
          : false
      }) %>
      <% } %>
      <main class="page-content">
